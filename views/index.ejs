<%- include("partials/header.ejs") %>
<header>
  <h1>Welcome to My Blog</h1>
</header>
<section>
  <% if(!posts || posts.length === 0) { %>
    <p>No posts available. Please check back later.</p>
  <% } else { %>
    <h2>Recent Posts</h2>
    <hr>
    <% posts.forEach(post => { %>
      <article class="post">
        <div class="post-header">
          <h3>title</h3>
          <p><%= post.title %></p>
        </div>
        <div class="post-content">
          <h3>content</h3>
          <p><%= post.content %></p>
        </div>
        <div class="post-actions">
          <a href="<%= post.link %>" class="btn btn-secondary read-more" target="_blank">Read More</a>
        <!-- delete button -->
        <a href="/delete-post/<%= post.id %>" class="btn btn-danger delete-post">Delete</a>
        <!-- edit button -->
        <a href="/edit-post/<%= post.id %>" class="btn btn-primary edit-post">Edit</a>
        </div>
      </article>
      <hr>
    <% }); %>
  <% } %>
</section>
