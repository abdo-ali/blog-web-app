<%- include("partials/header.ejs") %>
<header>
  <h1>Welcome to My Blog</h1>
</header>
<section>
  <% if(!posts || posts.length === 0) { %>
    <p>No posts available. Please check back later.</p>
  <% } else { %>
    <h2>Recent Posts</h2>
    <hr>
    <% posts.forEach(post => { %>
      <article class="post">
        <div class="post-header">
          <h3>title</h3>
          <p><%= post.title %></p>
        </div>
        <div class="post-content">
          <h3>content</h3>
          <p><%= post.content %></p>
        </div>
        <a href="/posts/<%= post.id %>" class="btn btn-secondary read-more">Read More</a>
      </article>
      <hr>
    <% }); %>
  <% } %>
</section>
